<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.Login">
   <center>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField id="usernameField" fx:id="usernameField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="570.0" promptText="Username">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="30.0" />
               </VBox.margin>
               <font>
                  <Font size="50.0" />
               </font>
            </TextField>
            <PasswordField id="passwordField" fx:id="passwordField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="570.0" promptText="Password">
               <VBox.margin>
                  <Insets bottom="25.0" left="15.0" right="15.0" top="25.0" />
               </VBox.margin>
               <font>
                  <Font size="50.0" />
               </font>
            </PasswordField>
            <HBox alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="570.0">
               <children>
                  <CheckBox fx:id="showCheckbox" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showPassword" prefHeight="30.0" prefWidth="270.0" text="Show Password">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </CheckBox>
               </children>
            </HBox>
            <TextField id="visiblePasswordField" fx:id="visiblePasswordField" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="570.0" visible="false">
               <font>
                  <Font size="50.0" />
               </font>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="25.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="submitBtn" fx:id="submitBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#login" text="Login">
               <font>
                  <Font size="29.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="25.0" left="25.0" right="20.0" top="25.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
